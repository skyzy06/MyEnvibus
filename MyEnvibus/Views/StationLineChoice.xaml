<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:vm="clr-namespace:MyEnvibus.ViewModels" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MyEnvibus.Views.StationLineChoice" Title="Station Line Choice">
    <ContentPage.BindingContext>
        <vm:StationSchedulesViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Entry Placeholder="Bus station" Text="{Binding SearchTerms}" />
            <Button Text="Search" Command="{Binding SearchSchedule}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>